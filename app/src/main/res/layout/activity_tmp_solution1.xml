<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/gradation"
    tools:context=".views.TmpSolutionActivity1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blue"
        android:orientation="vertical">

        <TextView
            android:id="@+id/qeustionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:paddingTop="130dp"
            android:text=""
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textSize="25sp" />

        <RadioGroup
            android:id="@+id/selectionRadioG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="30dp">

            <RadioButton
                android:id="@+id/selectionRadio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="선택지1"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/selectionRadio2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="선택지2"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/selectionRadio3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="선택지3"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/selectionRadio4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="선택지4"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </RadioGroup>

        <Button
            android:id="@+id/exSummary"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="#0066B6"
            android:text="요약"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/summaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <Button
            android:id="@+id/exDetail"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#0066B6"
            android:text="자세히"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/detailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/backstage"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:visibility="visible"
            android:src="@drawable/backstage"
            />
    </LinearLayout>

</ScrollView>