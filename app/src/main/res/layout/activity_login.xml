<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/titleTxtView1"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="112dp"
        android:gravity="center"
        android:text=" 말랑말랑"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleTxtView2"
        android:layout_width="220dp"
        android:layout_height="64dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="두뇌 트레이닝"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/titleTxtView1"
        app:layout_constraintStart_toStartOf="@+id/titleTxtView1"
        app:layout_constraintTop_toBottomOf="@+id/titleTxtView1" />

    <TextView
        android:id="@+id/idTxtView"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/design_default_color_background"
        android:backgroundTintMode="multiply"
        android:gravity="center"
        android:text="ID"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/pwTxtView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTxtView2"
        app:layout_constraintVertical_bias="0.951" />

    <TextView
        android:id="@+id/pwTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:backgroundTint="@color/material_on_surface_disabled"
        android:gravity="center"
        android:text="Password"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/idTxtView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/titleTxtView2" />

    <EditText
        android:id="@+id/idEdtTxt"
        android:layout_width="210dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/idTxtView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idTxtView"
        app:layout_constraintTop_toTopOf="@+id/idTxtView" />

    <EditText
        android:id="@+id/pwEdtTxt"
        android:layout_width="210dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/pwTxtView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pwTxtView"
        app:layout_constraintTop_toTopOf="@+id/pwTxtView" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="127dp"
        android:layout_height="60dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="76dp"
        android:text="로그인"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pwEdtTxt" />
</androidx.constraintlayout.widget.ConstraintLayout>