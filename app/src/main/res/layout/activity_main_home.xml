<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainHomeActivity">

    <ImageView
        android:id="@+id/profileImgVIew"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/userNicknameTxtView"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/user_profile_btn" />

    <TextView
        android:id="@+id/userNicknameTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="Nickname"
        android:textSize="25dp"
        app:layout_constraintLeft_toRightOf="@+id/profileImgVIew"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/menuListBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/menu_btn"/>

    <Button
        android:id="@+id/rankBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rank 확인"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toLeftOf="@id/menuListBtn" />

    <ImageView
        android:id="@+id/rankListBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toLeftOf="@+id/rankBtn"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/rank_list_btn"/>

    <TextView
        android:id="@+id/titleTxtView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" 말랑말랑"
        android:textSize="100dp"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleTxtView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="두뇌 트레이닝"
        android:textSize="50dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/titleTxtView1"
        />

    <Button
        android:id="@+id/storyBtn"
        android:onClick="gameModeSelectSystem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:padding="20dp"
        android:text="스토리 모드"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@id/titleTxtView2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/challengeBtn"
        android:onClick="gameModeSelectSystem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:padding="20dp"
        android:text="도전 모드"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/storyBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/studyBtn"
        android:onClick="gameModeSelectSystem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:padding="20dp"
        android:text="학습 모드"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/challengeBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>