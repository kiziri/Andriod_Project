<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.andriod_project">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Andriod_Project"
        android:usesCleartextTraffic="true">
        <activity android:name=".views.RankingActivity" />
        <activity android:name=".views.ChallengeModeActivity" />
        <activity android:name=".views.StoryModeActivity" />
        <activity android:name=".views.LoginActivity" />
        <activity android:name=".views.JoinActivity" />
        <activity android:name=".views.MainHomeActivity" />
        <activity android:name=".views.StudyModeActivity" />
        <activity android:name=".views.ModeSelectionActivity" />
        <activity android:name=".views.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>